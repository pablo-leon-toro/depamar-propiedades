/* nuevo header responsive --- en proceso */

import { Image } from "astro:assets";

import closeIcon from "@assets/icons/close.svg";
import menuIcon from "@assets/icons/menu.svg";
import depamarHorizontalLogo from "@assets/icons/depamarprop-horizontal.svg";
---

<header class="hero">
    <div class="navheader-container">
        <Image
            class="depamar-logo"
            src={depamarHorizontalLogo}
            alt="Depamar Propiedades"
        />

        <nav class="nav" id="nav">
            <a href="/">Propiedades</a>
            <a href="/publica">Publica tu Propiedad</a>
            <a href="/contacto">Contacto</a>
        </nav>

        <Image class="icon close-icon" src={closeIcon} alt="Close" />
        <Image class="icon menu-icon" src={menuIcon} alt="Menu" />
    </div>
</header>

<style>
    header {
        cursor: default;
        user-select: none;

        width: 100%;
        height: var(--header-h);
        top: 0px;

        background-color: var(--color-wb-5);
        color: var(--color-wb-0);

        z-index: 2;
        overflow: hidden;
        position: fixed;

        display: flex;
        align-items: center;

        /*  box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.01);
        backdrop-filter: blur(3px);


        animation: anim-header linear both;
        animation-timeline: scroll(root block);
        animation-range: 0px 5rem; */
    }

    /*   @keyframes anim-header {
        to {
            box-shadow: 0px 2px 2px var(--color-wb-0-16);
        }
    } */



    /* Para header en pantallas mas grandes
    
    
    
    
    */

    div.navheader-container {
        height: 100%;
        width: var(--contenido-w);
        max-width: var(--max-contenido-w);
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    nav.nav {
        margin: 0px;
        padding: 0px;
        display: flex;
        justify-content: flex-end;
        gap: calc(0.2rem + 2lvw);
    }

    img.icon {
        cursor: pointer;
        max-width: 2rem;
        object-fit: contain;
        object-position: center;
    }

    img.depamar-logo {
        min-width: 10rem;
        width: calc(10rem + 1lvw);
        object-fit: contain;
        object-position: center;
        /* margin-right: calc(0.6rem + 0.8lvw); */
    }

    

    nav a {
        text-decoration: none;
        display: flex;
        align-items: center;
        color: var(--color-depablue);
        text-align: center;
        padding: 1rem;
        border-radius: 4px;
        border: 1px solid var(--color-depablue);
        transition:
            background-color 200ms ease,
            color 200ms ease;
    }

    nav a:hover {
        background-color: var(--color-depablue);
        color: rgb(255, 255, 255);
    }
</style>
